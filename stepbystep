sudo wget -O /usr/local/bin/neofetch https://raw.githubusercontent.com/dylanaraps/neofetch/master/neofetch  #Instalación
sudo chmod a+x /usr/local/bin/neofetch                                                                      #Dar permisos a carpeta
neofetch --version                                                                                          #Comprobar la versión
neofetch                                                                                                    #Lanzar Neofetch
